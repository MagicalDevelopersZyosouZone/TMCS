// '...' 有单引号为字面值，否则为标识符
// [...] 可选
// { ... | ... } 必填的单选参数
//
// 仅在操作失败时返回 code，值为负数
// 无需返回任何数据时 return {} （空对象）

[
  //User
  {
    "GetLoginInfo": {
      "params": [
        "userId"
      ],
      "returns": [
        "authType: { 'password' | 'privateKey' }",
        "{ authCode | salt, saltTmp }"
      ]
    },

    "Login": {
      "params": [
        "userId",
        "{ privateKey | passwordHash }"
      ],
      "returns": []
    }
  },

  //TMCS
  {
    // Pull roaming messages from TMCS server
    "PullMessages": {
      "params": [ "userId", "timestamp", "count" ],
      "returns": [
        [ "timestamp", "message" ]
      ]
    },

    "SendMessage": {
      "params": [
        "userId",
        //"relativeTime",
        "message"
      ],
      "returns": []
    },

    "SetUnreadTime": {
      "params": [ "time" ],
      "returns": []
    },

    //"PushMessages": {
    //  "params": {
    //    "name": "messages",
    //    "type": "array",
    //    "item": [ "senderuserId", "timestamp", "messageText" ]
    //  }
    //}
  }
]
